{
  "expo": {
    "name": "TrueNumber",
    "slug": "truenumber-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.truenumber.app",
      "supportsTablet": false,
      "infoPlist": {
        "NSFaceIDUsageDescription": "TrueNumber uses Face ID to secure your verification process",
        "NSCameraUsageDescription": "Camera access is required for biometric authentication",
        "ITSAppUsesNonExemptEncryption": false
      },
      "associatedDomains": [
        "applinks:truenumber.com",
        "applinks:*.truenumber.com"
      ]
    },
    "android": {
      "package": "com.truenumber.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e40af"
      },
      "permissions": [
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "com.android.vending.BILLING"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "truenumber.com"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "truenumber-verifications"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow TrueNumber to use Face ID for secure authentication"
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow TrueNumber to access secure storage"
        }
      ]
    ],
    "scheme": "truenumber",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "truenumber-team"
  }
}