# TrueNumber Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=truenumber
DB_USER=postgres
DB_PASSWORD=truenumber_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=truenumber_redis_password
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# JWT & SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=change-this-secret-key-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change-this-refresh-secret-in-production
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=truenumber-api
JWT_AUDIENCE=truenumber-app

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
ENCRYPTION_KEY=change-this-encryption-key-in-production-32chars
DEVICE_FINGERPRINT_SECRET=change-this-device-secret-in-production

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
COMPANY_RATE_LIMIT_WINDOW=60000
COMPANY_RATE_LIMIT_MAX=50

# =============================================================================
# SMS SERVICE (TWILIO)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

# =============================================================================
# FIREBASE CLOUD MESSAGING
# =============================================================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FCM_SERVER_KEY=your_fcm_server_key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_ROUNDS=12
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
MAX_OTP_ATTEMPTS=3
VERIFICATION_EXPIRY_MINUTES=2

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_DELAY_MS=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=truenumber.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# =============================================================================
# API DOCUMENTATION
# =============================================================================
SWAGGER_HOST=localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_ANALYTICS=false
ENABLE_WEBHOOKS=true
ENABLE_BIOMETRICS=true

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
DB_HEALTH_TIMEOUT=5000
REDIS_HEALTH_TIMEOUT=3000

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# These are used by docker-compose.yml if you prefer different passwords
# DB_PASSWORD=your_custom_db_password
# REDIS_PASSWORD=your_custom_redis_password