# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/truenumber
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-replace-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-replace-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Firebase Configuration (for Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS Configuration (Alternative SMS provider)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3001

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Verification Configuration
VERIFICATION_REQUEST_EXPIRY_MINUTES=10
MAX_PENDING_VERIFICATION_REQUESTS=5

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-replace-in-production
WEBHOOK_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=false
LOG_FILE_PATH=./logs/truenumber.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api
MAX_REQUEST_SIZE=10mb

# Pagination Configuration
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100